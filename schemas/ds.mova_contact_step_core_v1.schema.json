{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/ds.mova_contact_step_core_v1.schema.json",
  "title": "ds.mova_contact_step_core_v1",
  "description": "Core step record for MOVA Contact execute mode. Captures deterministic step outcome, reason_code and loop signal.",
  "allOf": [
    {
      "$ref": "https://mova.dev/schemas/ds.mova_schema_core_v1.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "run_id": {
          "type": "string",
          "minLength": 1
        },
        "step_id": {
          "type": "integer",
          "minimum": 1
        },
        "actor_id": {
          "type": "string",
          "minLength": 1
        },
        "verb": {
          "type": "string",
          "minLength": 1
        },
        "object": {
          "type": "string",
          "minLength": 1
        },
        "tool": {
          "type": "string",
          "minLength": 1
        },
        "ts_start_utc": {
          "type": "string",
          "description": "UTC timestamp of step start. Accepts unix:<sec> or RFC3339 date-time."
        },
        "ts_end_utc": {
          "type": "string",
          "description": "UTC timestamp of step end. Accepts unix:<sec> or RFC3339 date-time."
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0
        },
        "result": {
          "type": "string",
          "enum": [
            "ok",
            "warn",
            "retry",
            "timeout",
            "denied",
            "fail",
            "block"
          ]
        },
        "error_kind": {
          "type": [
            "string",
            "null"
          ]
        },
        "reason_code": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "none",
            "missing_input",
            "permission",
            "network",
            "tool_error",
            "format_error",
            "no_progress",
            "unsafe_side_effect",
            null
          ]
        },
        "loop_signature_detected": {
          "type": "boolean"
        },
        "dictionary_ref": {
          "type": "string",
          "minLength": 1
        },
        "correlation": {
          "type": "object",
          "properties": {
            "trace_id": {
              "type": [
                "string",
                "null"
              ]
            },
            "span_id": {
              "type": [
                "string",
                "null"
              ]
            }
          },
          "required": [
            "trace_id",
            "span_id"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "run_id",
        "step_id",
        "actor_id",
        "verb",
        "object",
        "tool",
        "ts_start_utc",
        "ts_end_utc",
        "duration_ms",
        "result",
        "loop_signature_detected",
        "dictionary_ref"
      ],
      "additionalProperties": false
    }
  ]
}

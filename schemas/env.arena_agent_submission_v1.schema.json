{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/env.arena_agent_submission_v1.schema.json",
  "title": "env.arena_agent_submission_v1",
  "description": "Arena envelope for submitting one agent run package into a benchmark match.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "envelope_id": {
      "type": "string",
      "const": "env.arena_agent_submission_v1"
    },
    "verb": {
      "type": "string",
      "const": "submit"
    },
    "roles": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "submitter": {
          "type": "string"
        },
        "arena_referee": {
          "type": "string"
        }
      },
      "required": [
        "submitter",
        "arena_referee"
      ]
    },
    "submission": {
      "$ref": "https://mova.dev/schemas/ds.arena_agent_match_submission_v1.schema.json"
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": [
    "envelope_id",
    "verb",
    "roles",
    "submission"
  ]
}

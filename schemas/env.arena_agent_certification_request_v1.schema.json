{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/env.arena_agent_certification_request_v1.schema.json",
  "title": "env.arena_agent_certification_request_v1",
  "description": "Arena envelope for requesting certification of an agent after benchmark match execution.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "envelope_id": {
      "type": "string",
      "const": "env.arena_agent_certification_request_v1"
    },
    "verb": {
      "type": "string",
      "const": "certify"
    },
    "roles": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "requester": {
          "type": "string"
        },
        "arena_certifier": {
          "type": "string"
        }
      },
      "required": [
        "requester",
        "arena_certifier"
      ]
    },
    "request": {
      "$ref": "https://mova.dev/schemas/ds.arena_agent_certification_request_v1.schema.json"
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": [
    "envelope_id",
    "verb",
    "roles",
    "request"
  ]
}

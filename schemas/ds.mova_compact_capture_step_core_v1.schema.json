{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/ds.mova_compact_capture_step_core_v1.schema.json",
  "title": "ds.mova_compact_capture_step_core_v1",
  "description": "Minimal compact capture-step receipt for MOVA observability. Aligned with compact capture semantics and OpenTelemetry correlation.",
  "allOf": [
    {
      "$ref": "https://mova.dev/schemas/ds.mova_schema_core_v1.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "run_id",
        "step_id",
        "ts_ms",
        "actor_id",
        "dictionary_ref",
        "action_code",
        "subject_ref",
        "result_code"
      ],
      "properties": {
        "run_id": {
          "type": "string",
          "minLength": 1
        },
        "step_id": {
          "type": "integer",
          "minimum": 0
        },
        "ts_ms": {
          "type": "integer",
          "minimum": 0
        },
        "dur_ms": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 0
        },
        "actor_id": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255
        },
        "dictionary_ref": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "id",
            "ver"
          ],
          "properties": {
            "id": {
              "type": "string",
              "minLength": 1
            },
            "ver": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "action_code": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535
        },
        "subject_ref": {
          "type": "string",
          "minLength": 1
        },
        "tool_code": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 0,
          "maximum": 65535
        },
        "io_fingerprint": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": false,
          "required": [
            "kind",
            "value"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "sha256",
                "crc32",
                "size_only"
              ]
            },
            "value": {
              "type": [
                "string",
                "integer"
              ]
            }
          }
        },
        "result_code": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535
        },
        "error_code": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 0,
          "maximum": 65535
        },
        "reason_code": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "none",
            "missing_input",
            "permission",
            "network",
            "tool_error",
            "format_error",
            "no_progress",
            "unsafe_side_effect",
            null
          ]
        },
        "loop_signature_detected": {
          "type": "boolean"
        },
        "correlation": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": false,
          "properties": {
            "trace_id": {
              "type": [
                "string",
                "null"
              ]
            },
            "span_id": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        }
      }
    }
  ]
}
